# Firebase service account JSON absolute path
FIREBASE_CREDENTIALS=

# Fitbit OAuth
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=

# Google OAuth (if using Google Fit)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Queue backend (cloud-agnostic)
# Supported: memory | kafka | gcp_pubsub | aws_sqs
QUEUE_BACKEND=memory
QUEUE_FALLBACK_TO_MEMORY=true

# Kafka
QUEUE_KAFKA_BROKERS=localhost:9092
QUEUE_KAFKA_CLIENT_ID=health-service

# GCP Pub/Sub
QUEUE_GCP_PROJECT_ID=
QUEUE_GCP_TOPIC_PREFIX=

# AWS SQS
QUEUE_AWS_REGION=
# JSON map of topic->queue URL, e.g. {"fitbit.notifications.raw":"https://sqs.us-east-1.amazonaws.com/123/fitbit-raw"}
QUEUE_AWS_SQS_TOPIC_URLS=
# Optional single queue URL fallback
QUEUE_AWS_SQS_URL=

# Optional: URL/host for the microservice
HOST=0.0.0.0
PORT=8000
