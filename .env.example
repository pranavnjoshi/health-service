# Firebase service account JSON absolute path
FIREBASE_CREDENTIALS=

# Fitbit OAuth
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=

# Google OAuth (if using Google Fit)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Queue backend (cloud-agnostic)
# Supported: memory | kafka | gcp_pubsub | aws_sqs
QUEUE_BACKEND=memory
QUEUE_FALLBACK_TO_MEMORY=true

# Worker topics / queue names
WORKER_TOPIC_RAW=fitbit.notifications.raw
WORKER_TOPIC_RETRY=fitbit.notifications.retry
WORKER_TOPIC_DLQ=fitbit.notifications.dlq
WORKER_MAX_RETRIES=3
WORKER_BATCH_SIZE=25
WORKER_POLL_SECONDS=2
WORKER_DEFAULT_USER_ID=me
WORKER_OUTPUT_FILE=worker_processed_events.jsonl

# Kafka
QUEUE_KAFKA_BROKERS=localhost:9092
QUEUE_KAFKA_CLIENT_ID=health-service
QUEUE_KAFKA_GROUP_ID=health-service-worker
QUEUE_KAFKA_AUTO_OFFSET_RESET=latest

# GCP Pub/Sub
QUEUE_GCP_PROJECT_ID=
QUEUE_GCP_TOPIC_PREFIX=
# JSON map of topic->subscription, e.g. {"fitbit.notifications.raw":"fitbit-raw-sub","fitbit.notifications.retry":"fitbit-retry-sub"}
QUEUE_GCP_SUBSCRIPTIONS=

# AWS SQS
QUEUE_AWS_REGION=
# JSON map of topic->queue URL, e.g. {"fitbit.notifications.raw":"https://sqs.us-east-1.amazonaws.com/123/fitbit-raw"}
QUEUE_AWS_SQS_TOPIC_URLS=
# Optional single queue URL fallback
QUEUE_AWS_SQS_URL=

# Optional: URL/host for the microservice
HOST=0.0.0.0
PORT=8000
